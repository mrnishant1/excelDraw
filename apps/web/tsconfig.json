{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",               
    "paths": {
      "@/*": ["./*"] ,
      "@prisma/client": ["./node_modules/.prisma/client"]             
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "app/Types/next-auth.d.ts"
, "tailwind.config.cjs"  ],
  "exclude": [
    "node_modules"
  ]
}
